<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= ice.name %> - Picard x Smurfs
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <!-- Animated Header -->
        <header class="hero">
            <div class="hero-content">
                <h1 class="hero-title">
                    <span class="ice-icon">üßä</span>
                    <%= ice.name %>
                        <span class="smurf-icon">üîµ</span>
                </h1>
                <p class="hero-subtitle">
                    <%= ice.description %>
                </p>
            </div>

            <!-- Interactive 3D ice cream -->
            <div class="ice-container" id="iceContainer">
                <div class="ice-3d">
                    <div class="stick"></div>
                    <div class="ice-body"></div>
                    <div class="reflections"></div>
                    <div class="drops"></div>
                </div>
            </div>
        </header>

        <!-- Details section -->
        <section class="details">
            <div class="details-grid">
                <!-- Ingredients -->
                <div class="card ingredients-card">
                    <h3>üåø Magical Ingredients</h3>
                    <ul class="ingredients-list">
                        <% ice.ingredients.forEach(ingredient=> { %>
                            <li>
                                <%= ingredient %>
                            </li>
                            <% }); %>
                    </ul>
                </div>

                <!-- Interactive Animation -->
                <div class="card animation-card" id="animationCard">
                    <h3>‚ú® Smurf Magic</h3>
                    <div class="animation-content">
                        <div class="magic-circle">
                            <div class="sparkle sparkle-1">‚ú®</div>
                            <div class="sparkle sparkle-2">‚≠ê</div>
                            <div class="sparkle sparkle-3">üí´</div>
                            <div class="sparkle sparkle-4">üåü</div>
                            <div class="center-emoji">üßä</div>
                        </div>
                        <p class="magic-text">Click to reveal the magic!</p>
                    </div>
                </div>

                <!-- Order -->
                <div class="card order-card">
                    <h3>üõí Order</h3>
                    <div class="price-tag">
                        <span class="price">
                            <%= ice.price %>
                        </span>
                        <span class="stock">Stock: <span id="stockCount">
                                <%= ice.stock %>
                            </span></span>
                    </div>

                    <div class="rating">
                        <span class="stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
                        <span class="rating-value">
                            <%= ice.rating %>/5
                        </span>
                    </div>

                    <div class="order-form">
                        <label for="quantity">Quantity:</label>
                        <input type="number" id="quantity" min="1" max="<%= ice.stock %>" value="1">
                        <button id="orderBtn" class="btn-order">
                            Smurf my order! üßä
                        </button>
                    </div>

                    <div id="orderMessage" class="order-message"></div>
                </div>
            </div>
        </section>

        <!-- Customer reviews -->
        <section class="reviews">
            <h3>üí¨ Smurfy Reviews</h3>
            <div class="reviews-grid">
                <% ice.reviews.forEach(review=> { %>
                    <div class="review-card">
                        <div class="review-header">
                            <span class="name">
                                <%= review.name %>
                            </span>
                            <div class="stars">
                                <% for(let i=0; i < review.rating; i++) { %>‚òÖ<% } %>
                                        <% for(let i=review.rating; i < 5; i++) { %>‚òÜ<% } %>
                            </div>
                        </div>
                        <p class="comment">"<%= review.comment %>"</p>
                    </div>
                    <% }); %>
            </div>
        </section>

        <!-- Particle effect -->
        <div class="particles" id="particles"></div>
    </div>

    <script src="/js/app.js"></script>
</body>

</html>