<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= glace.nom %> - Picard x Schtroumpfs
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container">
        <!-- Header anim√© -->
        <header class="hero">
            <div class="hero-content">
                <h1 class="hero-title">
                    <span class="glace-icon">üßä</span>
                    <%= glace.nom %>
                        <span class="schtroumpf-icon">üîµ</span>
                </h1>
                <p class="hero-subtitle">
                    <%= glace.description %>
                </p>
            </div>

            <!-- Glace 3D interactive -->
            <div class="glace-container" id="glaceContainer">
                <div class="glace-3d">
                    <div class="baton"></div>
                    <div class="glace-corps"></div>
                    <div class="reflets"></div>
                    <div class="gouttes"></div>
                </div>
            </div>
        </header>

        <!-- Details section -->
        <section class="details">
            <div class="details-grid">
                <!-- Ingredients -->
                <div class="card ingredients-card">
                    <h3>üåø Ingr√©dients Magiques</h3>
                    <ul class="ingredients-list">
                        <% glace.ingredients.forEach(ingredient=> { %>
                            <li>
                                <%= ingredient %>
                            </li>
                            <% }); %>
                    </ul>
                </div>

                <!-- Animation Interactive -->
                <div class="card animation-card" id="animationCard">
                    <h3>‚ú® Magie Schtroumpf</h3>
                    <div class="animation-content">
                        <div class="magic-circle">
                            <div class="sparkle sparkle-1">‚ú®</div>
                            <div class="sparkle sparkle-2">‚≠ê</div>
                            <div class="sparkle sparkle-3">üí´</div>
                            <div class="sparkle sparkle-4">üåü</div>
                            <div class="center-emoji">üßä</div>
                        </div>
                        <p class="magic-text">Cliquez pour r√©v√©ler la magie !</p>
                    </div>
                </div>

                <!-- Commande -->
                <div class="card order-card">
                    <h3>üõí Commander</h3>
                    <div class="price-tag">
                        <span class="price">
                            <%= glace.prix %>
                        </span>
                        <span class="stock">Stock: <span id="stockCount">
                                <%= glace.stock %>
                            </span></span>
                    </div>

                    <div class="rating">
                        <span class="stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
                        <span class="note">
                            <%= glace.note %>/5
                        </span>
                    </div>

                    <div class="order-form">
                        <label for="quantite">Quantit√©:</label>
                        <input type="number" id="quantite" min="1" max="<%= glace.stock %>" value="1">
                        <button id="commanderBtn" class="btn-commander">
                            Schtroumpfer ma commande ! üßä
                        </button>
                    </div>

                    <div id="messageCommande" class="message-commande"></div>
                </div>
            </div>
        </section>

        <!-- Avis clients -->
        <section class="avis">
            <h3>üí¨ Avis Schtroumpfants</h3>
            <div class="avis-grid">
                <% glace.avis.forEach(avis=> { %>
                    <div class="avis-card">
                        <div class="avis-header">
                            <span class="nom">
                                <%= avis.nom %>
                            </span>
                            <div class="stars">
                                <% for(let i=0; i < avis.note; i++) { %>‚òÖ<% } %>
                                        <% for(let i=avis.note; i < 5; i++) { %>‚òÜ<% } %>
                            </div>
                        </div>
                        <p class="commentaire">"<%= avis.commentaire %>"</p>
                    </div>
                    <% }); %>
            </div>
        </section>

        <!-- Effet particules -->
        <div class="particules" id="particules"></div>
    </div>

    <script src="/js/app.js"></script>
</body>

</html>